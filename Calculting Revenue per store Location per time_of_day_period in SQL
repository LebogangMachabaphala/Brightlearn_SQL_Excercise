SELECT product_category,store_location,transaction_time,transaction_date,sum(transaction_qty*unit_price)as Revenue,
case when transaction_time between '06:00:00'and '11:59:59'then '01.Morning'
when transaction_time between '12:00:00'and '14:59:59'then '02.Afternnon'
when transaction_time between '15:00:00'and '19:59:59'then '03.Evening'
when transaction_time>='20:00:00'then '04.Night'
end as Bucket_time
From coffee_business.coffee_shops.bright_coffee_shop_analysis
where transaction_date>'2023-05-01'
group by product_category,transaction_date,transaction_time,Bucket_time,store_location
order by Revenue desc;
